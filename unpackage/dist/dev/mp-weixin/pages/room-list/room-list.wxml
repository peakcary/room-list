<view class="container"><view class="tab-bar"><view class="{{['tab-item', b && 'active']}}" bindtap="{{c}}"><view class="tab-content"><text class="tab-text">全部</text><text class="tab-count">({{a}})</text></view></view><view class="{{['tab-item', e && 'active']}}" bindtap="{{f}}"><view class="tab-content"><text class="tab-text">可租用</text><text class="tab-count">({{d}})</text></view></view><view class="{{['tab-item', h && 'active']}}" bindtap="{{i}}"><view class="tab-content"><text class="tab-text">已租用</text><text class="tab-count">({{g}})</text></view></view></view><view class="action-bar"><view class="search-box"><input class="search-input" placeholder="搜索房间号..." bindinput="{{j}}" value="{{k}}"/></view><view class="add-btn" bindtap="{{l}}"><text class="add-icon">+</text><text>添加</text></view></view><scroll-view class="room-list" scroll-y="true" bindscrolltolower="{{p}}"><view wx:for="{{m}}" wx:for-item="room" wx:key="p" class="room-item" bindtap="{{room.q}}"><view class="room-header"><view class="room-number">{{room.a}}号房</view><view class="header-actions"><button wx:if="{{room.b}}" class="header-btn tenant" catchtap="{{room.c}}"> 出租 </button><button wx:if="{{room.d}}" class="header-btn renewal" catchtap="{{room.e}}"> 续租 </button><button wx:if="{{room.f}}" class="header-btn terminate" catchtap="{{room.g}}"> 退租 </button></view></view><view wx:if="{{room.h}}" class="tenant-info-card"><view class="tenant-main-info"><view class="tenant-name-phone"><text class="tenant-name">{{room.i}}</text><text class="tenant-phone" bindtap="{{room.k}}"> 📞 {{room.j}}</text></view><view class="tenant-status"><text class="status-badge">在租</text></view></view><view wx:if="{{room.l}}" class="rental-period"><text class="period-text">📅 {{room.m}}</text><view class="{{['days-remaining', room.o]}}"><text class="days-text">{{room.n}}</text></view></view></view></view><view wx:if="{{n}}" class="load-more"><text>{{o}}</text></view></scroll-view></view>