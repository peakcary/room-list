<view class="container"><view class="tab-bar"><view class="{{['tab-item', b && 'active']}}" bindtap="{{c}}"><text class="tab-text">全部</text><text class="tab-count">({{a}})</text></view><view class="{{['tab-item', e && 'active']}}" bindtap="{{f}}"><text class="tab-text">可租用</text><text class="tab-count">({{d}})</text></view><view class="{{['tab-item', h && 'active']}}" bindtap="{{i}}"><text class="tab-text">已租用</text><text class="tab-count">({{g}})</text></view></view><view class="action-bar"><view class="search-box"><input class="search-input" placeholder="搜索房间号..." bindinput="{{j}}" value="{{k}}"/></view><view class="add-btn" bindtap="{{l}}"><text class="add-icon">+</text><text>添加</text></view></view><scroll-view class="room-list" scroll-y="true" bindscrolltolower="{{p}}"><view wx:for="{{m}}" wx:for-item="room" wx:key="q" class="room-item" bindtap="{{room.r}}"><view class="room-header"><view class="room-number">{{room.a}}号房</view><view class="{{['room-status', room.c]}}">{{room.b}}</view></view><view class="room-info"><view class="info-item"><text class="label">面积:</text><text class="value">{{room.d}}㎡</text></view><view class="info-item"><text class="label">租金:</text><text class="value price">¥{{room.e}}/月</text></view></view><view wx:if="{{room.f}}" class="tenant-info"><view class="info-item"><text class="label">租户:</text><text class="value">{{room.g}}</text></view><view class="info-item"><text class="label">电话:</text><text class="value">{{room.h}}</text></view><view wx:if="{{room.i}}" class="info-item"><text class="label">租期:</text><text class="value">{{room.j}}</text></view></view><view class="room-actions"><button class="action-btn edit" catchtap="{{room.k}}">编辑</button><button class="action-btn utilities" catchtap="{{room.l}}">水电</button><button wx:if="{{room.m}}" class="action-btn tenant" catchtap="{{room.n}}"> 出租 </button><button wx:if="{{room.o}}" class="action-btn tenant-end" catchtap="{{room.p}}"> 退租 </button></view></view><view wx:if="{{n}}" class="load-more"><text>{{o}}</text></view></scroll-view><view class="statistics"><view class="stat-item"><text class="stat-number">{{q}}</text><text class="stat-label">总房间</text></view><view class="stat-item"><text class="stat-number">{{r}}</text><text class="stat-label">已租</text></view><view class="stat-item"><text class="stat-number">{{s}}</text><text class="stat-label">空闲</text></view></view></view>